<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>

    <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='mb-3'>
            <label for='name' class='form-label'>Tên khóa học</label>
            <input type='text' class='form-control' value='{{course.name}}' id='name' name='name' />
        </div>

        <div class='mb-3'>
            <label for='description' class='form-label'>Miêu tả</label>
            <textarea
                class='form-control'
                id='description'
                name='description'
            >{{course.description}}</textarea>
        </div>

        <div class='mb-3'>
            <label for='videoId' class='form-label'>Video ID</label>
            <input
                type='text'
                class='form-control'
                value='{{course.videoId}}'
                id='videoId'
                name='videoId'
            />
        </div>

        <div class='mb-3'>
            <label for='image' class='form-label'>IMG Link</label>
            <input
                type='text'
                class='form-control'
                value='{{course.image}}'
                id='image'
                name='image'
            />
        </div>

        <div class='mb-3'>
            <label for='numbers_studied' class='form-label'>Số người đã học</label>
            <input
                type='text'
                class='form-control'
                value='{{course.numbers_studied}}'
                id='numbers_studied'
                name='numbers_studied'
            />
        </div>

        <button type='submit' class='btn btn-primary'>Lưu lại</button>
    </form>
</div>